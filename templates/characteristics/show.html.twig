{% extends 'base.html.twig' %}

{% block title %}Characteristics{% endblock %}

{% block body %}
    <h1>Characteristics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ characteristic.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ characteristic.name }}</td>
            </tr>
            
            <tr>
                <th>Value</th>
                <td>{{ characteristic.value }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ characteristic.product.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-lg btn-primary" href="{{ path('characteristics_index') }}">back to list</a>

    <a class="btn btn-lg btn-primary" href="{{ path('characteristics_edit', {'id': characteristic.id}) }}">edit</a>

    {{ include('characteristics/_delete_form.html.twig') }}
{% endblock %}
